<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/button"
    android:fitsSystemWindows="true"
    android:paddingBottom="8dp"
    android:paddingLeft="2dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp" >

    <TextView
        android:id="@+id/txtDay"
        android:layout_width="71.0dip"
        android:layout_height="68.0dip"
        android:gravity="center_horizontal"
        android:height="100.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="20.0dip"
        android:text="Mon"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/txtDay"
        android:text="time 830-950"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/Ivory"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/txtRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Room 5"
        android:textAppearance="?android:textAppearanceMedium"
        android:textSize="16.0dip" />

    <TextView
        android:id="@+id/txtTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSubject"
        android:layout_toRightOf="@id/txtDay"
        android:text="Mr.M.Qasim"
        android:textAppearance="?android:textAppearanceMedium"
        android:textSize="10.0dip" />

    <TextView
        android:id="@+id/txtSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txtTeacher"
        android:layout_below="@id/txtTime"
        android:text="Design Patterns"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/Cornsilk"
        android:textSize="18.0dip"
        android:textStyle="bold" />

</RelativeLayout>